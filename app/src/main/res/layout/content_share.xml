<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smartstreet.mobile.com.smartstreet.shareActivity"
    tools:showIn="@layout/activity_share">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/audioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/playButton"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.37"
            android:src="@drawable/ic_play_light" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Recorder"
            android:visibility="invisible"
            android:id="@+id/recorderButton"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.07"
            android:src="@drawable/ic_mic_black_24dp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"
            android:visibility="invisible"
            android:id="@+id/stopBttn"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/audioButton"
            android:src="@drawable/ic_stop_black_24dp"
            android:layout_weight="0.37" />


    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Record Audio"
        android:id="@+id/audioButton"
        android:src="@drawable/record"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share "
        android:visibility="invisible"
        android:id="@+id/sharebttn1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/audioButton"
        android:layout_alignStart="@+id/audioButton"
        android:layout_toLeftOf="@+id/stopBttn"
        android:layout_toStartOf="@+id/stopBttn"
        android:src="@drawable/share1" />


</RelativeLayout>
